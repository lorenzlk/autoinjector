{
  "env": {
    "node": true,
    "browser": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": "warn",
    "no-undef": "warn",
    "prefer-const": "warn",
    "no-var": "warn"
  },
  "globals": {
    "defineComponent": "readonly"
  },
  "ignorePatterns": [
    "node_modules/",
    "*.min.js"
  ]
} 